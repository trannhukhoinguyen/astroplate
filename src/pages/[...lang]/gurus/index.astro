---
import GuruCard from "../../../layouts/components/GuruCard.astro";
import Base from "@/layouts/Base.astro";
import { getListPage, getSinglePage } from "@/lib/contentParser.astro";
import { supportedLang } from "@/lib/utils/languageParser";
import PageHeader from "@/partials/PageHeader.astro";
import { type ContentEntryMap } from "astro:content";

const COLLECTION_FOLDER = "gurus";

export function getStaticPaths() {
  const paths = supportedLang.map((lang) => ({
    params: { lang: lang || undefined },
  }));
  return paths;
}

const { lang } = Astro.params;
const guruIndex = await getListPage(
  COLLECTION_FOLDER,
  lang as keyof ContentEntryMap
);
const gurus = await getSinglePage(
  COLLECTION_FOLDER,
  lang as keyof ContentEntryMap
);
---

<Base title={guruIndex[0].data.title}>
  <PageHeader title={guruIndex[0].data.title} />
  <section class="section-sm pb-0">
    <div class="container">
      <div class="row justify-center">
        {
          gurus.map((guru) => (
            <div class="mb-14 md:col-6 lg:col-4">
              <GuruCard data={guru} />
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Base>
