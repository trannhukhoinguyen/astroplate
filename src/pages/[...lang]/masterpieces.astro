---
import Base from "@/layouts/Base.astro";
import { supportedLang } from "@/lib/utils/languageParser";
import { site } from "@/config/config.json";
import PageHeader from "../../layouts/partials/PageHeader.astro";

export function getStaticPaths() {
  const paths = supportedLang.map((lang) => ({
    params: { lang: lang || undefined },
  }));
  return paths;
}

const { lang } = Astro.params;
---

  <Base
    title={ site.title + ' - Masterpieces' }
    meta_title={ site.meta_title + ' - Masterpieces' }
    description={ site.meta_description + ' - Masterpieces' }
    image={'/images/meta-image-square-1.jpg'}
  >
  <PageHeader title={ 'Masterpieces' } />
  <section class="section-sm">
    <div class="container">

    </div>
  </section>
  </Base>
