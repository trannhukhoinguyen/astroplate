---
import Base from "@/layouts/Base.astro";
import { getListPage, getSinglePage } from "@/lib/contentParser.astro";
import { getAllTaxonomy, getTaxonomy } from "@/lib/taxonomyParser.astro";
import {
  getLangFromUrl,
  getTranslations,
  supportedLang
} from "@/lib/utils/languageParser";
import PageHeader from "@/partials/PageHeader.astro";
import type { ContentEntryMap } from "astro:content";

export function getStaticPaths() {
  const paths = supportedLang.map((lang) => ({
    params: { lang: lang || undefined },
  }));
  return paths;
}
const { lang } = Astro.params || getLangFromUrl(Astro.url);

const postIndex = await getListPage(
  "books",
  lang as keyof ContentEntryMap
);
const posts = await getSinglePage("books", lang as keyof ContentEntryMap);
const {
  indian_masters, chinese_masters, level_0, level_1, level_2, level_3, level_4, level_5,
} = await getTranslations(lang as keyof ContentEntryMap);
---

<Base>
<PageHeader title={"Books"} />
<section class="section">
  <div class="container">
    {
      !lang || lang === 'vi'
        ? <iframe
          style='width:900px;height:500px'
          src='https://pubhtml5.com/bookcase/cunen//green'
          seamless='seamless' scrolling='no' frameborder='0'
          allowtransparency='true'
          allowfullscreen
        ></iframe>
      : <iframe
      style='width:900px;height:500px'
      src='https://pubhtml5.com/bookcase/qkqyg//green'
      seamless='seamless' scrolling='no' frameborder='0'
      allowtransparency='true'
      allowfullscreen
    ></iframe>
      }
      </div>
      </section>
      </Base>

      <style>
        .section {
          padding-block: 0;
        }
      </style>
